{
  "name": "studio",
  "private": true,
  "version": "1.0.0",
  "main": "package.json",
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "postinstall": "yarn run setup-sprites",
    "build": "sanity build",
    "deploy": "sanity deploy",
    "dev": "sanity dev",
    "start": "sanity start",
    "lint": "eslint . --fix --max-warnings=0 || exit 0",
    "format": "prettier --write --log-level silent \"src/**/*.{js,jsx,ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "typegen": "sanity schema extract --enforce-required-fields && sanity typegen generate",
    "setup-sprites": "../../.scripts/setup-sprites.sh $PWD/static/icons"
  },
  "keywords": [
    "sanity"
  ],
  "dependencies": {
    "@packages/assets": "*",
    "@packages/ui": "*",
    "@packages/utils": "*",
    "@sanity/assist": "^4.0.1",
    "@sanity/client": "^6.29.0",
    "@sanity/color": "^3.0.6",
    "@sanity/document-internationalization": "^3.3.1",
    "@sanity/embeddings-index-ui": "^2.0.1",
    "@sanity/icons": "^3.7.0",
    "@sanity/image-url": "^1.1.0",
    "@sanity/table": "^1.1.3",
    "@sanity/ui": "^2.15.13",
    "@sanity/vision": "^3.85.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sanity": "^3.85.1",
    "sanity-pills": "^2.0.0",
    "sanity-plugin-icon-picker": "^4.0.0",
    "sanity-plugin-internationalized-array": "^3.1.2",
    "sanity-plugin-media": "^3.0.2",
    "sanity-plugin-pt-string": "^0.0.7",
    "sanity-plugin-simpler-color-input": "^3.0.1",
    "sanity-plugin-singleton-tools": "^1.1.0",
    "styled-components": "^6.1.17"
  },
  "devDependencies": {
    "@packages/eslint": "*",
    "@packages/typescript": "*",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5"
  }
}
